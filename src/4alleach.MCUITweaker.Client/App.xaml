<Application x:Class="_4alleach.MCRecipeEditor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:_4alleach.MCRecipeEditor"
             xmlns:conv="clr-namespace:_4alleach.MCRecipeEditor.Client.Converters"
             StartupUri="Views/Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Buttons.xaml"/>
                <ResourceDictionary Source="Resources/Styles/ListBox.xaml"/>
                <ResourceDictionary Source="Resources/Styles/ScrollViewer.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <conv:InverseVisibilityConverter x:Key="InverseVisibilityConverter"/>

        </ResourceDictionary>
    </Application.Resources>
</Application>
